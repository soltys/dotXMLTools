<Window x:Class="dotXMLToolsWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dotXMLToolsWPF="clr-namespace:dotXMLToolsWPF" Title="dotXMLTools" Height="350" Width="525">    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="Plik">
                <MenuItem Header="Otwórz" Click="MenuItem_File_Open_Click"></MenuItem>
                <Separator></Separator>
                <MenuItem Header="Wyjście" Click="MenuItem_File_Exit_Click"></MenuItem>
            </MenuItem>
        </Menu>
        <dotXMLToolsWPF:ElementsBar Grid.Row="1"></dotXMLToolsWPF:ElementsBar>
    </Grid>

</Window>
